    <title>Multi Functionality Todo App</title>
</head>

<body class="d-flex justify-content-center align-items-center min-vh-100 bg-body-dark">
  <div class="container rounded p-3 shadow bg-light" style="max-width: 400px; width: 100%;">

    <%- include('partials/titleRow') %>

    <div class="show-loader my-2">
      <%- include('partials/loader') %>
    </div>

    <div class="fetched-data overflow-auto" style="max-height: 50vh; padding: .8rem;">
    </div>

    <div class="d-flex justify-content-center align-items-center mt-3">
      <div class="d-flex gap-3">
        <button id="prevBtn" class="btn btn-outline-dark px-4 fw-semibold shadow-sm" onclick="prevPage()">⬅️ Prev</button>
        <button id="nextBtn" class="btn btn-outline-dark px-4 fw-semibold shadow-sm" onclick="nextPage()">Next ➡️</button>
      </div>
    </div>

  </div>

  <!-- Scripts -->
  <script src="/script.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
